@model IEnumerable<GamMostre.Models.Autore>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nominativo)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Nominativo)
        </td>
        <td>
            @Html.ActionLink("Visualizza mostre", "ElencoMostre", new { id=item.Id }) 
        </td>
    </tr>
}

</table>
