@model IEnumerable<GamMostre.Models.Mostra>

@{
    ViewBag.Title = "ElencoMostre";
}

<h2>Elenco Mostre per Autore @ViewBag.Autore</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Titolo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Datazione)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Tecnica)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Dimensioni)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Immagine)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Titolo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Datazione)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Tecnica)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Dimensioni)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Immagine)
        </td>
        <td>
            @Html.ActionLink("Details", "Details", new { id=item.Id })
        </td>
    </tr>
}

</table>
